{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
    "paths": {
      "@Components/*": [
        "components/*"
      ],
      "@Icons/*": [
       "icons/*"
     ],
     "@User/*": [
       "screens/post-authentication/User/*"
     ],
     "@Learner/*": [
       "screens/post-authentication/Learner/*"
     ],
     "@Network/*": [
       "network/*"
     ],
     "@Utils/*": [
       "utils/*"
     ],
     "@Hooks/*": [
       "hooks/*"
     ],
     "@Store/*": [
       "store/*"
     ],
     "@Providers/*": [
      "providers/*"
    ],
    // TODO: Remove once lms-common version is published with peer dependency
    "@adewaskar/lms-common": [
      "../node_modules/@invinciblezealorg/lms-common"
    ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "./dist/types/**/*.ts",
    "src/**/*"

  ],
  "exclude": ["node_modules"],
}
